<head>
    <title>{{channelName}} - sorvyt</title>
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            grid-template-rows: auto 1fr;
            gap: 16px;
        }
        .video-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1rem;
            border: 1px solid #ddd;
            overflow: hidden;
        }
        .video-item > img {
            width: 100%;
            height: auto;
            object-fit: cover;
            object-position: center;
        }
        .video-item > h3 {
            margin-top: 0.5rem;
            font-size: 1.5rem;
            text-align: center;
        }
        .sort-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 16px;
        }
        .sort-container > form {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }
        .sort-container > form > label {
            margin-right: 8px;
        }
    </style>
</head>

{{#> layout}}
    {{#* inline "main"}}
        <div class="grid-container">
            <div class="sort-container">
                <form id="sort-order" method="get" action="/result?channelId={{channelId}}&order={{order}}">
                    <input type="hidden" name="channelId" value="{{channelId}}">
                    <label for="sort-date">Date</label>
                    <input type="radio" id="sort-date" name="order" value="date" {{#if (eq order 'date')}}checked{{/if}}>
                    <label for="sort-rating">Rating</label>
                    <input type="radio" id="sort-rating" name="order" value="rating" {{#if (eq order 'rating')}}checked{{/if}}>
                    <label for="sort-title">Title</label>
                    <input type="radio" id="sort-title" name="order" value="title" {{#if (eq order 'title')}}checked{{/if}}>
                    <label for="sort-views">Views</label>
                    <input type="radio" id="sort-views" name="order" value="viewCount" {{#if (eq order 'viewCount')}}checked{{/if}}>
                </form>
            </div>
            {{#each videos}}
                <div class="video-item">
                    <a href="https://www.youtube.com/watch?v={{videoId}}" target="_blank">
                        <img src="{{thumbnail}}" alt="{{title}}">
                        <h3>{{title}}</h3>
                    </a>
                </div>
            {{/each}}
        </div>
    {{/inline}}
{{/layout}}

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('sort-order');
        const buttons = form.querySelectorAll('input[name="order"]');
        buttons.forEach((button) => {
            button.addEventListener('change', (event) => {
                const order = event.target.value;
                const channelId = '{{channelId}}';
                const url = `/result?channelId=${channelId}&order=${order}`;
                form.setAttribute('action', url);
                form.submit();
            });
        });
    });
</script>