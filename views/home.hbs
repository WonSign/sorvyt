{{#>layout}}
    {{#*inline "main"}}
        <style>
            @font-face {
                font-family: "YouTubeFont";
                src: url(/font/YouTubeSansBlack.otf);
            }
            form {
                margin: auto;
                padding: 50px;
                text-align: center;
            }
            input[type="text"] {
                width: 280px;
                height: 25px;
                font-size: 20px;
                font-family: "YouTubeFont";
            }
        </style>
        <form action="search" method="get">
            <input type="text" name="keyword" placeholder="Search for a YouTube channel">
            <input type="submit">
        </form>
    {{/inline}}
{{/layout}}